{
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install && npm install --prefix client",
  "rewrites": [
    {
      "source": "/api/bybit/(.*)",
      "destination": "https://api.bybit.com/v5/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/check-smart-alerts",
      "schedule": "*/5 * * * *"
    }
  ]
}
